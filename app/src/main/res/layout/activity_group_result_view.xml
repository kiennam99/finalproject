<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/label_group_result_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="School"
        android:textColor="@android:color/black"
        android:textSize="30sp"

        />

    <TextView

        android:id="@+id/label_group_result_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp" />

    <TextView

        android:id="@+id/label_group_result_marks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marks"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp" />

    <TextView

        android:id="@+id/label_group_result_nstudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Student"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp" />

    <TextView

        android:id="@+id/label_group_result_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp" />

    <TextView

        android:id="@+id/label_group_result_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp" />
</LinearLayout>