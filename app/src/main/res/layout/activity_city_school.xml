<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CitySchool">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Please Select School"
    android:textSize="36sp"
    android:textColor="@android:color/black"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="244dp"
    android:id="@+id/label_city_school"
    />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select"
        android:layout_below="@+id/label_city_school"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_city_school_select"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_below="@+id/button_city_school_select"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_city_school_next"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_city_school_next"
        android:id="@+id/label_city_school_result"
        />

</RelativeLayout>